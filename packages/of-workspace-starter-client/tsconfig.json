{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "rootDir": "./src",
        "moduleResolution": "Node",
        "outDir": "build",
        "sourceMap": true,
        "sourceRoot": "src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "references": [
        { "path": "./tsconfig.node.json" },
    ]
}
